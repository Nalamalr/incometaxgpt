#!/bin/bash
# IncomeTaxGPT Environment Setup

# Create project directory
mkdir incometax-gpt
cd incometax-gpt

# Create virtual environment
python3 -m venv venv
source venv/Scripts/activate  # On Windows: venv\Scripts\activate

# Create project structure
mkdir -p data/{raw,processed,embeddings}
mkdir -p models/{base,fine-tuned}
mkdir -p src
mkdir -p tests
mkdir -p logs
mkdir -p outputs

# Install core dependencies
pip install --upgrade pip

# Core ML/NLP libraries
pip install torch==2.1.0 torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118
pip install transformers==4.36.0
pip install accelerate==0.25.0
pip install bitsandbytes==0.41.3
pip install peft==0.7.0
pip install datasets==2.15.0

# Retrieval & embeddings
pip install sentence-transformers==2.2.2
pip install faiss-cpu==1.7.4  # Use faiss-gpu if you have GPU
pip install chromadb==0.4.18
pip install rank-bm25==0.2.2

# Document processing
pip install pypdf==3.17.0
pip install python-docx==1.1.0
pip install beautifulsoup4==4.12.2
pip install lxml==4.9.3

# Web framework & UI
pip install streamlit==1.29.0
pip install fastapi==0.108.0
pip install uvicorn==0.25.0
pip install python-multipart==0.0.6

# Utilities
pip install python-dotenv==1.0.0
pip install tqdm==4.66.1
pip install pandas==2.1.4
pip install numpy==1.24.3

# Save requirements
pip freeze > requirements.txt

echo "Setup complete! Activate environment with: source venv/bin/activate"